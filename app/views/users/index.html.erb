<h1>Пользователи</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nickname %></td>
        <td><%= link_to 'Пригласить', room_room_users_path(id: user.id, room_id:@room.id), method: :post %></td>

      </tr>
    <% end %>
  </tbody>
</table>

